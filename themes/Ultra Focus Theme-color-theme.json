{
  "$schema": "vscode://schemas/color-theme",
  "type": "dark",
  "colors": {
    "editor.background": "#000000", // Pure black as requested
    "editor.foreground": "#e0e0e0", // Softer off-white; high contrast (~21:1) against black
    "editorCursor.foreground": "#4ec9b0", // Soft teal; less blue light than cyan
    "editor.lineHighlightBackground": "#1a1a1a", // Subtle dark gray for active line; avoids pure black to distinguish
    "editorLineNumber.foreground": "#6b7280", // Neutral gray; contrast ~7:1
    "editorLineNumber.activeForeground": "#4ec9b0", // Teal for active line number
    "editor.selectionBackground": "#3b4a5a", // Muted blue-gray; contrast ~5:1 for readability
    "editorBracketMatch.background": "#1a1a1a", // Subtle gray for bracket matching
    "editorBracketMatch.border": "#4ec9b0", // Teal for bracket borders
    "sideBar.background": "#000000", // Pure black for sidebar
    "sideBar.foreground": "#d1d5db", // Light gray; contrast ~15:1
    "activityBar.background": "#000000", // Pure black for activity bar
    "activityBar.foreground": "#4ec9b0", // Teal for icons
    "statusBar.background": "#000000", // Pure black for status bar
    "statusBar.foreground": "#d1d5db", // Light gray; high contrast
    "titleBar.activeBackground": "#000000", // Pure black for title bar
    "titleBar.activeForeground": "#d1d5db" // Light gray for title text
  },
  "tokenColors": [
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#4ec9b0" // Soft teal; vibrant but low strain
      }
    },
    {
      "name": "Classes",
      "scope": [
        "entity.name.class",
        "support.class",
        "support.type"
      ],
      "settings": {
        "foreground": "#d7ba7d" // Muted gold; warm and distinct
      }
    },
    {
      "name": "Numbers & Constants",
      "scope": [
        "constant.numeric",
        "constant.language",
        "support.constant",
        "variable.parameter"
      ],
      "settings": {
        "foreground": "#b392f0" // Soft purple; calm yet clear
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "constant.other.symbol"
      ],
      "settings": {
        "foreground": "#9ccc65" // Muted green; less intense
      }
    },
    {
      "name": "Keywords",
      "scope": "keyword",
      "settings": {
        "foreground": "#f06292" // Soft pink-red; bold but not harsh
      }
    },
    {
      "name": "Comments",
      "scope": "comment",
      "settings": {
        "foreground": "#6b7280", // Neutral gray; contrast ~7:1, italic for style
        "fontStyle": "italic"
      }
    },
    {
      "name": "Variables",
      "scope": "variable",
      "settings": {
        "foreground": "#e0e0e0" // Matches editor foreground
      }
    }
  ]
}